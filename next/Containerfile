FROM docker.io/node:22

ARG WORDPRESS_CONTENT_PATH=
ARG WORDPRESS_HOSTNAME=
ARG WORDPRESS_PORT=
ARG WORDPRESS_PROTOCOL=

ENV NEXT_PUCLIC_WORDPRESS_CONTENT_PATH=${WORDPRESS_CONTENT_PATH}
ENV NEXT_PUBLIC_WORDPRESS_HOSTNAME=${WORDPRESS_HOSTNAME}
ENV NEXT_PUBLIC_WORDPRESS_PORT=${WORDPRESS_PORT}
ENV NEXT_PUBLIC_WORDPRESS_PROTOCOL=${WORDPRESS_PROTOCOL}

WORKDIR /app

COPY package.json .
COPY package-lock.json .
COPY next .

WORKDIR /app/next

RUN npm ci \
  && npx next telemetry --disable \
  && npm run build

EXPOSE 3000

ENV NODE_ENV=production

CMD [ "npm", "start" ]
